
@{
    ViewData["Title"] = "Edit";
}

@using EntityFrameworkCalismalari.MvcWebUI.Models.ViewModels;
@model ProductEditVm

<h1>Ürün Düzenleme Formu</h1>
<form action="/Product/Edit" method="post">
    <input type="hidden" name="ProductID" value="@Model.ProducttoEdit.ProductID"/>
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="ProductName" id="txtProductName" value="@Model.ProducttoEdit.ProductName" />
    </div>
    <div class="form-group">
        <label>Birim Açıklaması</label>
        <input type="text" class="form-control" name="QuantityPerUnit" id="txtQuantityPerUnit" value="@Model.ProducttoEdit.QuantityPerUnit" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" class="form-control" name="UnitPrice" id="txtUnitPrice" value="@Model.ProducttoEdit.UnitPrice.Value" />
    </div>
    <div class="form-group">
        <label>Kategorisi</label>
        <select class="form-control" id="ddlCategories" name="CategoryId" />
        @foreach (var item in Model.Categories)
        {
            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
        }
        </select>
    </div>
    <div class="form-group">
        <label>Tedarikçiler</label>
        <select class="form-control" id="ddlSuppliers" name="SupplierID" />
        @foreach (var item in Model.Suppliers)
        {
            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
        }
        </select>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="Discontinued" name="Discontinued" id="chkDiscontinued" @(Model.ProducttoEdit.Discontinued ? "checked" : "")>
        <label class="form-check-label">
            Bitti
        </label>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" id="btnSave" value="KAYDET" />
    </div>
</form>